{
    "manifest_version": 2,
    
    "name": "SCVODArchives Helper",
    "description": "Get all the SCVODArchives stream information you need",
    "version": "0.7",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "images/icon128.png",
        "default_popup": "panel.html"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}